{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "appAssociation": "AUTO",
    "rewrites": [
      // your existing rewrites...
    ]
  },
  "apphosting": {
    "env": [
      {
        "variable": "OPENAI_API_KEY",
        "value": "${OPENAI_API_KEY}"
      },
      {
        "variable": "NEXT_PUBLIC_OPENAI_API_KEY",
        "value": "${NEXT_PUBLIC_OPENAI_API_KEY}"
      },
      {
        "variable": "NEXT_PUBLIC_OPENAI_AVAILABLE",
        "value": "true"
      }
    ]
  }
}
