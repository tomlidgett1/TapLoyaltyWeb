{
  "typography": {
    "fontFamily": ["Inter", "system-ui", "-apple-system", "Segoe UI", "sans-serif"],
    "fontWeights": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "fontSizes": {
      "xs": "12px",
      "sm": "14px",
      "md": "16px",
      "lg": "20px",
      "xl": "24px",
      "2xl": "32px"
    },
    "lineHeights": {
      "sm": "1.2",
      "md": "1.5",
      "lg": "1.75"
    }
  },
  "colors": {
    "text": {
      "primary": "#1F2937",
      "secondary": "#4B5563",
      "muted": "#6B7280",
      "disabled": "#9CA3AF",
      "inverse": "#FFFFFF"
    },
    "background": {
      "default": "#FFFFFF",
      "surface": "#F9FAFB",
      "muted": "#F3F4F6",
      "overlay": "rgba(0, 0, 0, 0.5)"
    },
    "border": {
      "default": "#E5E7EB",
      "hover": "#D1D5DB",
      "active": "#CBD5E1"
    },
    "interactive": {
      "primary": "#007AFF",
      "primaryHover": "#3399FF",
      "danger": "#EF4444",
      "dangerHover": "#DC2626",
      "focusRing": "#3B82F6",
      "disabled": "#E5E7EB"
    }
  },
  "spacing": {
    "xxs": "4px",
    "xs": "8px",
    "sm": "12px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "xxl": "40px"
  },
  "radii": {
    "none": "0",
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px rgba(0, 0, 0, 0.15)"
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px"
  },
  "components": {
    "button": {
      "height": "40px",
      "padding": "0 16px",
      "borderRadius": "8px",
      "fontSize": "14px",
      "fontWeight": 500
    },
    "input": {
      "height": "36px",
      "padding": "0 12px",
      "borderRadius": "8px",
      "borderColor": "#D1D5DB",
      "fontSize": "14px"
    },
    "modal": {
      "maxWidth": "480px",
      "padding": "24px",
      "borderRadius": "12px",
      "background": "#FFFFFF",
      "headerFontSize": "16px",
      "bodyFontSize": "14px"
    },
    "toggle": {
      "width": "40px",
      "height": "20px",
      "trackRadius": "10px",
      "thumbSize": "16px",
      "thumbRadius": "8px"
    },
    "slider": {
      "trackHeight": "4px",
      "thumbSize": "12px",
      "thumbBorder": "2px solid #CBD5E1"
    },
    "sidebar": {
      "width": "240px",
      "background": "#FFFFFF",
      "itemPadding": "12px 16px",
      "itemFontSize": "14px",
      "itemHoverBg": "#F3F4F6",
      "dividerColor": "#E5E7EB"
    },
    "tabs": {
      "fontSize": "14px",
      "padding": "8px 16px",
      "activeBorderColor": "#007AFF",
      "inactiveTextColor": "#6B7280"
    }
  }
}
